{
	"$schema": "https://turborepo.org/schema.json",
	"globalDependencies": [
		"tsconfig.json"
	],
	"tasks": {
		"dev": {
			"cache": false,
			"persistent": true
		},
		"typecheck": {
			"inputs": [
				"src/**",
				"tsconfig.json"
			],
			"outputs": [],
			"outputLogs": "new-only",
			"cache": true
		},
		"build": {
			"dependsOn": [
				"^build"
			],
			"inputs": [
				"src/**",
				"package.json",
				"rollup.config.*",
				"style-dictionary.config.*"
			],
			"outputs": [
				"dist/**",
				"build/**"
			],
			"cache": true
		},
		"translations": {
			"inputs": [
				"src/**"
			],
			"outputs": [
				"src/translation/**"
			],
			"cache": true,
			"persistent": true
		}
	}
}
