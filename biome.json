{
	"$schema": "https://biomejs.dev/schemas/2.3.0/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"**/*",
			"!**/_route.ts",
			"!**/dist",
			"!**/.tanstack"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"attributePosition": "multiline",
		"bracketSameLine": false,
		"bracketSpacing": true,
		"expand": "always",
		"formatWithErrors": false,
		"lineEnding": "lf",
		"indentWidth": 4
	},
	"linter": {
		"enabled": true,
		"domains": {
			"react": "all"
		},
		"rules": {
			"recommended": true,
			"a11y": {
				"noLabelWithoutControl": "off",
				"useKeyWithClickEvents": "off",
				"useHtmlLang": "off",
				"noStaticElementInteractions": "off"
			},
			"style": {
				"useComponentExportOnlyModules": "off"
			},
			"suspicious": {
				"noExplicitAny": "off"
			},
			"complexity": {
				"noBannedTypes": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"jsxQuoteStyle": "double",
			"attributePosition": "multiline",
			"expand": "always",
			"quoteProperties": "asNeeded",
			"trailingCommas": "all",
			"arrowParentheses": "always",
			"semicolons": "always"
		}
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
