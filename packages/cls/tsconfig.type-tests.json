{
	"extends": "@use-pico/tsconfig/common.json",
	"compilerOptions": {
		"rootDir": ".",
		"noEmit": true,
		"skipLibCheck": true,
		"strict": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"exactOptionalPropertyTypes": false
	},
	"include": [
		"src/**/*",
		"test/type/**/*"
	],
	"exclude": [
		"node_modules",
		"test/code/**/*",
		"dist/**/*",
		"build/**/*"
	]
}
