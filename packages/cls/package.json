{
	"name": "@use-pico/cls",
	"description": "Type-safe, composable styling system for React, Vue, Svelte, and vanilla JS",
	"version": "5.0.27",
	"type": "module",
	"sideEffects": false,
	"scripts": {
		"typecheck": "tsc --noEmit",
		"build:bundle": "bun x rollup -c",
		"build": "run-p build:*",
		"test": "run-s test:*",
		"test:code": "vitest --run"
	},
	"dependencies": {
		"react": "^19.1.1",
		"tailwind-merge": "^3.3.1"
	},
	"devDependencies": {
		"@aminnairi/rollup-plugin-external": "0.1.3",
		"@rollup/plugin-commonjs": "28.0.6",
		"@rollup/plugin-node-resolve": "16.0.1",
		"@rollup/plugin-typescript": "12.1.4",
		"@testing-library/jest-dom": "^6.6.4",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^24.1.0",
		"@types/react": "19.1.12",
		"@types/react-dom": "19.1.9",
		"@types/testing-library__jest-dom": "^6.0.0",
		"@use-pico/tsconfig": "4.0.22",
		"@vitejs/plugin-react": "^5.0.0",
		"@vitest/ui": "^3.2.4",
		"jsdom": "^26.1.0",
		"npm-run-all2": "8.0.4",
		"rollup": "4.50.1",
		"rollup-plugin-dts": "6.2.3",
		"typescript": "^5.9.2",
		"vitest": "^3.2.4"
	},
	"main": "src/index.ts",
	"module": "src/index.ts",
	"types": "src/index.ts",
	"files": [
		"src",
		"dist",
		"README.md"
	],
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./src/index.ts"
		}
	},
	"license": "MIT",
	"repository": "use-pico/pico",
	"homepage": "https://github.com/use-pico/pico#readme",
	"bugs": "https://github.com/use-pico/pico/issues",
	"keywords": [
		"component-variants",
		"css",
		"design-system",
		"design-tokens",
		"styling",
		"type-safe",
		"typescript"
	],
	"readme": "README.md"
}
