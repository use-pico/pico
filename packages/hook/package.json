		"react": "^18.2.0"
	},
	"devDependencies": {
		"@use-pico/esbuild": "^1.0.2",
		"@use-pico/eslint-config-eslint": "^1.0.2",
		"@use-pico/tsconfig": "^1.0.2",
		"@types/node": "^20.5.3",
		"concurrently": "^8.2.1",
		"del-cli": "^5.0.0",
		"eslint": "^8.47.0",
		"typescript": "^5.2.2"
